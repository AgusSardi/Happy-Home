<section id = "unite">

    <section id="section1" class="section blue-section">
        <div>
            <h1 class="titulo">¿Queres ser parte de nuestro equipo?
            </h1>

            <p> Revisá las postulaciones activas y envianos tu
                CV
            </p>
        </div>
    </section>
    <section id="contact">
        <h3 class="titulo-seccion">Datos</h3>
        <div class="contenedor-form">
            <form id="contactForm">
            <div class="fila mitad">
                <input type="text" id="nombre" placeholder="Nombre y Apellido" class="input-mitad">
                <input type="email" id="email" placeholder="Correo Electrónico" class="input-mitad">
            </div>
            <div class="fila">
                <input type="text" id="telefono" placeholder="Número de Teléfono (opcional)" class="input-full">
            </div>
            <div class="fila">
                    <input type="text" id="linkedin" placeholder="Linkedin (opcional)" class="input-full">
            </div>
            <div class="fila">
                <textarea id="mensaje" cols="30" rows="10" placeholder="¿Cómo podemos ayudarte?" class="input-full"></textarea>
            </div>
            <div class="botones">
                <input type="submit" value="Enviar Mensaje" class="btn-enviar">
            </div>
        </form>
        </div>
    </section>
</section>

<%= render 'layouts/footer' %>



<script>
    document.getElementById('contactForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Evitar el envío real del formulario

        // Obtener los valores del formulario
        const nombre = document.getElementById('nombre').value;
        const email = document.getElementById('email').value;
        const telefono = document.getElementById('telefono').value;
        const linkedin = document.getElementById('linkedin').value;
        const mensaje = document.getElementById('mensaje').value;

        // Construir el enlace mailto
        let mailtoLink = `mailto:agussardi@hotmail.com?subject=Contacto de ${nombre}&body=Nombre: ${nombre}%0AEmail: ${email}%0ATeléfono: ${telefono}%0ALinkedin: ${linkedin}%0AMensaje: ${mensaje}`;

        // Abrir el enlace mailto
        window.location.href = mailtoLink;
    });
</script>