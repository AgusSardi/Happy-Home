<header>
  <nav class="navbar">
    <div class="navbar-brand">
      
      <div class="brand-text">
        <%= image_tag 'home/1 (1).png', alt: 'Logo' %>
      </div>
    </div>
    <div id= "lista_nav">
      <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'Inicio', root_path %></li>
          <li class="nav-item"><%= link_to 'Servicios', servicios_path%></li>
          <li class="nav-item"><%= link_to 'Sobre nosotros', sobre_nosotros_path%></li>
          <li class="nav-item"><%= link_to 'Contacto', contacto_path%></li>
          <li class="nav-item"><%= link_to 'Unite a nosotros', unite_path%></li>
      </ul>
    </div>
    <div id= "img_justify">
      <%= image_tag 'navbar/justify.svg', alt: 'Logo', style: 'height: 50px;' %>
    </div>  

    <div id="sidebar" class="navbar-menu hidden">
      <ul class="navbar-nav-side">
        <li class="nav-item"><%= link_to 'Inicio', root_path %></li>
        <hr>
        <li class="nav-item"><%= link_to 'Servicios', servicios_path%></li>
        <hr>
        <li class="nav-item"><%= link_to 'Sobre nosotros', sobre_nosotros_path%></li>
        <hr>
        <li class="nav-item"><%= link_to 'Contacto', contacto_path%></li>
        <hr>
        <li class="nav-item"><%= link_to 'Unite a nosotros', unite_path%></li>
      </ul>
    </div>
  </nav>
</header>



<script>
  document.getElementById('img_justify').addEventListener('click', function() {
    const menu = document.getElementById('sidebar');
    menu.classList.toggle('hidden'); // Alterna la visibilidad
  });
</script>